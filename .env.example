# Ejemplo de .env para SmartParking
# DB_ENGINE puede ser:
# - una abreviatura: 'mysql', 'sqlite', 'postgresql'
# - o el backend completo: 'django.db.backends.mysql'
# Si DB_ENGINE está vacío se usará SQLite por defecto.

# Ejemplo MySQL
#DB_ENGINE=mysql
#DB_NAME=SmartParking
#DB_USER=root
#DB_PASSWORD=tu_contraseña
#DB_HOST=127.0.0.1
#DB_PORT=3306

# Ejemplo SQLite (por defecto si DB_ENGINE está vacío)
#DB_ENGINE=sqlite
#DB_NAME=db.sqlite3

# Django
SECRET_KEY=django-insecure-REPLACE_ME
DEBUG=True

# Hosts permitidos separados por comas (ej: localhost,127.0.0.1)
ALLOWED_HOSTS=localhost,127.0.0.1

